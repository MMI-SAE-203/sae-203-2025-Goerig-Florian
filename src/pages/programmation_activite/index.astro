---
import Programme from "../../assets/img/programme.webp";

import { dateactivite } from "../../../backend/backend.mjs";
import CardActivite from "../../components/CardActivite.astro";
import LayoutWithHero from "../../layouts/LayoutWithHero.astro";
import Calendrier from "../../assets/img/calendrier.webp";
const activites = await dateactivite();
---

<LayoutWithHero src={Calendrier} alt="image de la programmation des activités">
  <div class="grille my-24">
    {
      activites.length > 0 ? (
        activites.map((activite) => <CardActivite {...activite} />)
      ) : (
        <p>Aucune programmation prévue.</p>
      )
    }
  </div>
</LayoutWithHero>
