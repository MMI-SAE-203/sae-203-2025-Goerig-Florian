---
import LayoutWithHero from "../../layouts/LayoutWithHero.astro";
import CardFilm from "../../components/CardFilm.astro";
import festival from "../../assets/img/festival.webp";
import { datefilm } from "../../../backend/backend.mjs";
const films = await datefilm();
---

<LayoutWithHero src={festival} alt="image de la programmation des films">
  <div class="text-center py-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">
      Bienvenue sur la page dédiée à la programmation des films du Festival du
      Film d'Animation Japonaise !
    </h2>
    <h2
      class=" font-bold  mb-4">
      Ici, vous découvrirez une sélection exclusive de films d’animation,
      accompagnée de making-of fascinants et de rencontres enrichissantes avec
      des professionnels du secteur. Laissez-vous transporter par l’univers
      magique du cinéma d’animation !
    </h2>
  </div>
  <div class="
      grille
      my-24"
    >
      {
        films.length > 0 ? (
          films.map((film) => <CardFilm {...film} />)
        ) : (
          <p class="text-center text-gray-600">Aucune programmation prévue.</p>
        )
      }
    </h2>
  </div>
</LayoutWithHero>

